From 84d0099eb511f416df4740427a2cc2bb956c80f4 Mon Sep 17 00:00:00 2001
From: Mingcong Bai <jeffbai@aosc.io>
Date: Thu, 7 Mar 2024 23:49:28 +0800
Subject: [PATCH] chore: move .desktop category to Utility

This is not so much a network application but a utility.
---
 app/org.kde.kdeconnect.app.desktop             | 2 +-
 indicator/org.kde.kdeconnect.nonplasma.desktop | 2 +-
 smsapp/org.kde.kdeconnect.sms.desktop          | 2 +-
 3 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/app/org.kde.kdeconnect.app.desktop b/app/org.kde.kdeconnect.app.desktop
index d4b0a940..1d0a9e0b 100644
--- a/app/org.kde.kdeconnect.app.desktop
+++ b/app/org.kde.kdeconnect.app.desktop
@@ -151,4 +151,4 @@ Exec=kdeconnect-app
 Icon=kdeconnect
 Type=Application
 Terminal=false
-Categories=Qt;KDE;Network
+Categories=Qt;KDE;Utility;
diff --git a/indicator/org.kde.kdeconnect.nonplasma.desktop b/indicator/org.kde.kdeconnect.nonplasma.desktop
index 617ce7a0..2dda7b3e 100644
--- a/indicator/org.kde.kdeconnect.nonplasma.desktop
+++ b/indicator/org.kde.kdeconnect.nonplasma.desktop
@@ -98,6 +98,6 @@ Exec=kdeconnect-indicator
 Icon=kdeconnect
 Type=Application
 Terminal=false
-Categories=Qt;KDE;Network;
+Categories=Qt;KDE;Utility;
 NotShowIn=KDE;
 
diff --git a/smsapp/org.kde.kdeconnect.sms.desktop b/smsapp/org.kde.kdeconnect.sms.desktop
index f3b57aea..878d23bc 100644
--- a/smsapp/org.kde.kdeconnect.sms.desktop
+++ b/smsapp/org.kde.kdeconnect.sms.desktop
@@ -133,7 +133,7 @@ Exec=kdeconnect-sms
 Icon=kdeconnect
 Type=Application
 Terminal=false
-Categories=Qt;KDE;Network;InstantMessaging
+Categories=Qt;KDE;InstantMessaging;Utility;
 SingleMainWindow=true
 
 X-DBUS-StartupType=Unique
