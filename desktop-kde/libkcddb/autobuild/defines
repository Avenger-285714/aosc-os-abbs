PKGNAME=libkcddb
PKGSEC=kde
PKGDEP="kauth kcmutils kcodecs kcompletion kconfigwidgets kcoreaddons ki18n \
        kio kitemviews kjobwidgets kservice kwidgetsaddons kxmlgui \
        libmusicbrainz-5 solid"
