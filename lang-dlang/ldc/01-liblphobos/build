mkdir "$SRCDIR"/build
cd "$SRCDIR"/build
D_LINKER=lld
D_COMPILER_FLAGS=''

if ab_match_arch loongson3; then
    abinfo "Setting extra build flags for loongson3 ..."
    D_COMPILER_FLAGS="-mabi=n64 -mcpu=mips64r2"
    D_LINKER=gold
fi

if ab_match_arch riscv64; then
    abinfo "Setting extra build flags for riscv64 ..."
    CMAKE_EXTRA_FLAGS="-DD_EXTRA_FLAGS=-Xcc=-latomic"
    D_COMPILER_FLAGS="-Xcc=-Wl,-mllvm=-mattr=+d -mabi=lp64d"
fi

abinfo "Setting LDC linker to ld.${D_LINKER} ..."
export LDFLAGS="${LDFLAGS} -fPIC -fuse-ld=${D_LINKER}"

abinfo "Running CMake for LDC ..."
cmake .. \
    ${CMAKE_DEF[@]} ${CMAKE_AFTER[@]} -GNinja \
    ${CMAKE_EXTRA_FLAGS} \
    -DD_COMPILER_FLAGS="-link-defaultlib-shared=false -linker=${D_LINKER} -flto=full ${D_COMPILER_FLAGS}" 

abinfo "Building LDC ..."
ninja

abinfo "Installing LDC ..."
DESTDIR="$PKGDIR" ninja install
