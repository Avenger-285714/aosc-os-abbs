PKGNAME=avisynthplus
PKGSEC=libs
PKGDEP="devil gcc-runtime"
BUILDDEP="sphinx"
BUILDDEP__AMD64="${BUILDDEP} cuda"
BUILDDEP__ARM64="${BUILDDEP} cuda"
PKGDES="A frameserver for video post-production"

CMAKE_AFTER="-DBUILD_SHARED_LIBS=ON \
             -DINSTALL_ONLY_HEADER=OFF \
             -DENABLE_PLUGINS=ON \
             -DENABLE_INTEL_SIMD=OFF"
CMAKE_AFTER__AMD64=" \
             ${CMAKE_AFTER} \
             -DENABLE_INTEL_SIMD=ON \
             -DENABLE_CUDA=ON"
CMAKE_AFTER__ARM64=" \
             ${CMAKE_AFTER} \
             -DENABLE_CUDA=ON"
